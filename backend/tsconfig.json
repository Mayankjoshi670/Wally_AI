{
  "compilerOptions": {
    "target": "ES6",                        // ✅ Compile to ES6
    "module": "CommonJS",                   // ✅ CommonJS is used by Node.js
    "rootDir": "./src",                     // ✅ Your TS source files go in /src
    "outDir": "./dist",                     // ✅ Compiled JS goes in /dist
    "strict": true,                         // ✅ Enable strict type checking
    "esModuleInterop": true,                // ✅ Allow clean import of commonjs packages
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
